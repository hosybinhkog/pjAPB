@model pjWebBPA.contextModels.CustomerUser

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="create">
    <h1 class="create__title">Chỉnh sửa thông tin cá nhân</h1>

    <div class="create__container">
        <div class="form-group-auth">
            @Html.LabelFor(model => model.DisplayName, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.DisplayName, new { @class = "form-control", @placeholder = "Nguyễn Thế Anh" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.DisplayName, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(model => model.DisplayImage, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.DisplayImage, new { @class = "form-control", @placeholder = "https://images//" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.DisplayImage, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(model => model.Address, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Số nhà phường thành phố.." })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.Address, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(model => model.Email, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "email@email.com" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.Email, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(model => model.Phone, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Số nhà phường thành phố.." })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.Phone, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(model => model.Code, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @placeholder = "Số nhà phường thành phố.." })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.Code, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(model => model.Country, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Country, new { @class = "form-control", @placeholder = "Số nhà phường thành phố.." })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.Country, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(model => model.District, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.District, new { @class = "form-control", @placeholder = "Số nhà phường thành phố.." })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.District, "");
            </span>
        </div>
        <span>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </span>
        <div style="padding: 1rem; text-align: center">

            <h5 style="font-size: 1.3rem"><span>@ViewBag.error</span></h5>
            <h5 style="font-size: 1.3rem">@ViewBag.success</h5>

        </div>
        <button class="button-auth" type="submit">
            Create
        </button>
    </div>
</div>
}
