
@{
    ViewBag.Title = "BlogOfMe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="adminPage">
    <h1 class="adminPage__heading">Những bài viết của bạn</h1>
    <div>
        <div class="card">
            <div class="card__header">
                <h3>Danh sách blog</h3>
            </div>
            <div class="card__body">
                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Thumb</th>
                            <th>Category</th>
                            <th>Create</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.blogOfMe)
                        {
                            <tr>
                                <td>@item.BlogId</td>
                                <td>@item.Title</td>
                                <td style="width: 300px; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden;">@item.ContentBlog</td>
                                <td> <img style="width: 100px; height: 70px; object-fit:cover" src="@item.ThumBlog" /></td>
                                <td>@item.CategoryBlogId</td>
                                <td>@item.CreateAt</td>
                                <td><a href="@Url.Action("UpdateBlogOfMe", "Me", new {id = item.BlogId})">Edit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card__footer">
                <a href="#">View All!</a>
            </div>
        </div>
        <a href="@Url.Action("Create", "Blog")" style="margin-left: 2rem" class="btn btn--add btn--blue">Create</a>
    </div>

</div>

