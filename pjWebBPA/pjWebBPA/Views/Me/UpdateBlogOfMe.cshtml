@model pjWebBPA.contextModels.Blog

@{
    ViewBag.Title = "UpdateBlogOfMe";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>UpdateBlogOfMe</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="create">
        <h1 class="create__title">Cập nhật Blog</h1>
        @Html.HiddenFor(model => model.BlogId);
        <div class="create__container">
            <div class="form-group-auth">
                @Html.LabelFor(model => model.Title, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Nguyễn Thế Anh" })
                <span class="form-message">
                    @Html.ValidationMessageFor(model => model.Title, "");
                </span>
            </div>

            <div class="form-group-auth">
                @Html.LabelFor(model => model.ContentBlog, new { @class = "form-label" })
                @Html.TextAreaFor(model => model.ContentBlog, new { @class = "form-control", @placeholder = "Nguyễn Thế Anh" })
                <span class="form-message">
                    @Html.ValidationMessageFor(model => model.ContentBlog, "");
                </span>
            </div>

            <div class="form-group-auth">
                @Html.LabelFor(model => model.ShortContent, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.ShortContent, new { @class = "form-control", @placeholder = "Nguyễn Thế Anh" })
                <span class="form-message">
                    @Html.ValidationMessageFor(model => model.ShortContent, "");
                </span>
            </div>

            <div class="form-group-auth">
                @Html.LabelFor(model => model.ThumBlog, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.ThumBlog, new { @class = "form-control", @placeholder = "Nguyễn Thế Anh" })
                <span class="form-message">
                    @Html.ValidationMessageFor(model => model.ThumBlog, "");
                </span>
            </div>


            <div class="form-group-auth">
                @Html.LabelFor(model => model.Tag, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Tag, new { @class = "form-control", @placeholder = "Nguyễn Thế Anh" })
                <span class="form-message">
                    @Html.ValidationMessageFor(model => model.Tag, "");
                </span>
            </div>

            <span>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </span>
            <div style="padding: 1rem; text-align: center">

                <h5 style="font-size: 1.3rem"><span>@ViewBag.error</span></h5>
                <h5 style="font-size: 1.3rem">@ViewBag.success</h5>

            </div>
            <button class="button-auth" type="submit">
                Update
            </button>
        </div>
        
    </div>
}
