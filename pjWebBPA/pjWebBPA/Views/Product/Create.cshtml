@model pjWebBPA.contextModels.ProductCourse

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="create">
        <h1 class="create__title">Create product</h1>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="create__container">
        <div class="form-group-auth">
            @Html.LabelFor(model => model.ProductName, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control", @placeholder = "Lan xóm chùa" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.ProductName, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(model => model.ProductDescription, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.ProductDescription, new { @class = "form-control", @placeholder = "Lập trình dữ liệu" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.ProductDescription, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(model => model.ProductShortDescription, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.ProductShortDescription, new { @class = "form-control", @placeholder = "vd: tiêu đề ngắn " })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.ProductShortDescription, "");
            </span>
        </div>


        <div class="form-group-auth">
            @Html.LabelFor(m => m.CategoryCourseId, new { @class = "form-label" })
            @Html.DropDownList("CategoryCourseId", new SelectList(Model.listCategoriesCourse, "CategoryCourseId", "CategoryCourseName"), htmlAttributes: new { @class = "form-control" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.CategoryCourseId, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(m => m.listTeacher, new { @class = "form-label" })
            @Html.DropDownList("TeacherId", new SelectList(Model.listTeacher, "TeacherId", "TeacherName"), htmlAttributes: new { @class = "form-control" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.listTeacher, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(m => m.UrlVideoYoutube, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.UrlVideoYoutube, new { @class = "form-control", @placeholder = "Link video" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.UrlVideoYoutube, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(m => m.ProductImage, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.ProductImage, new { @class = "form-control", @placeholder = "Link hình ảnh" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.ProductImage, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(m => m.isFree, new { @class = "form-label" })
            @Html.EditorFor(m => m.isFree, new { @class = "form-control", @placeholder = "lan-xom-chua" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.isFree, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(m => m.isHot, new { @class = "form-label" })
            @Html.EditorFor(m => m.isHot, new { @class = "form-control", @placeholder = "lan-xom-chua" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.isHot, "");
            </span>
        </div>

        <div class="form-group-auth">
            @Html.LabelFor(m => m.Tags, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Tags, new { @class = "form-control", @placeholder = "lan-xom-chua" })
            <span class="form-message">
                @Html.ValidationMessageFor(model => model.Tags, "");
            </span>
        </div>
        <span>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </span>
        <div style="padding: 1rem; text-align: center">

            <h5 style="font-size: 1.3rem"><span>@ViewBag.error</span></h5>
            <h5 style="font-size: 1.3rem">@ViewBag.success</h5>

        </div>
        <button class="button-auth" type="submit">
            Create
        </button>
    </div>
    </div>
}
